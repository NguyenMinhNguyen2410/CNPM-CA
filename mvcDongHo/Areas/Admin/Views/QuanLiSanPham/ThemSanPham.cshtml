@model mvcDongHo.Areas.Admin.ViewModels.SanPhamView;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="col-md-10" style="margin-left: 8%">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Thêm sản phẩm</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-area="Admin" asp-controller="QuanLiSanPham" asp-action="ThemSanPhamData">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Mã sản phẩm</label>
                    <input asp-for="sanPhamDTO.IDSanPham"  class="form-control" id="exampleInputEmail1" placeholder="Nhập mã sản phẩm">
                    <span class="focus-input100 text-danger" asp-validation-for="sanPhamDTO.IDSanPham"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Tên sản phẩm</label>
                    <input asp-for="sanPhamDTO.TenSanPham"  class="form-control" id="exampleInputPassword1" placeholder="Nhập tên sản phẩm">
                    <span class="focus-input100 text-danger" asp-validation-for="sanPhamDTO.TenSanPham"></span>
                </div>
                <!--Combobox-->
                <div class="form-group">
                    <label>Loại dây</label>
                    <select asp-for="sanPhamDTO.IDDay" class="form-control" style="width: 100%;">
                        <option selected="selected">Alabama</option>
                        <option>Alaska</option>
                        <option>California</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Thương hiệu</label>
                    <select asp-for="sanPhamDTO.IDThuongHieu" class="form-control" style="width: 100%;">
                        <option selected="selected">Alabama</option>
                        <option>Alaska</option>
                        <option>California</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Nhà cung cấp</label>
                    <select asp-for="sanPhamDTO.IDNhaCungCap" class="form-control" style="width: 100%;">
                        <option selected="selected">Alabama</option>
                        <option>Alaska</option>
                        <option>California</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Bảo hành</label>
                    <select asp-for="sanPhamDTO.BaoHanh" class="form-control" style="width: 100%;">
                        <option selected="selected">Alabama</option>
                        <option>Alaska</option>
                        <option>California</option>
                    </select>
                </div>
                <!--end combobox-->
                <div class="form-group">
                    <label for="exampleInputPassword1">Số lượng</label>
                    <input asp-for="sanPhamDTO.SoLuong" class="form-control" id="exampleInputPassword1" placeholder="Nhập số lượng">
                    <span class="focus-input100 text-danger" asp-validation-for="sanPhamDTO.SoLuong"></span>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputPassword1">Giá</label>
                    <input asp-for="sanPhamDTO.Gia" class="form-control" id="exampleInputPassword1" placeholder="Nhập giá">
                    <span class="focus-input100 text-danger" asp-validation-for="sanPhamDTO.Gia"></span>
                </div>
            </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
                </div>
        </form>
    </div>
    <!-- /.card -->

</div>